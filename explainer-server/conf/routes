# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                            controllers.Application.index
GET           /healthcheck                 controllers.Healthcheck.healthcheck

GET           /explain/:id                 controllers.ExplainEditorController.get(id: Long)
POST          /explain/update/:id          controllers.ExplainEditorController.update(id: Long)
GET           /explain                     controllers.ExplainEditorController.all


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                controllers.Assets.at(path="/public", file)
