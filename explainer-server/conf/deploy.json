{
  "defaultStacks": ["flexible"],
  "packages": {
    "explain-maker": {
      "type": "autoscaling",
      "data": {
        "bucket": "composer-dist"
      }
    }
  },
  "recipes":{
    "default":{
      "depends": ["artifactUploadOnly", "deploy"]
    },
    "artifactUploadOnly": {
      "actions": [ "explain-maker.uploadArtifacts" ]
    },
    "deploy": {
      "actionsBeforeApp": ["explain-maker.deploy"]
    }
  }
}
